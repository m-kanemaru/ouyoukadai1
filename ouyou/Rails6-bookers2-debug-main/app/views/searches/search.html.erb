<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @model == "user" %>
    <h2>Users search for "
        <%= @content %>
        "</h2>
    <thead>
    <tr>
      <th></th>
      <th>name</th>
      <th>introduction</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    
    <h2>Books search for "
    <%= @content %>
    "</h2>
    <tr>
      <th></th>
      <th>title</th>
      <th>opinion</th>
      <th colspan="3"></th>
    </tr>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>