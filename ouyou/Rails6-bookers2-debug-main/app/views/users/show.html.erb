<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
      <% if current_user != @user %>
        <%= link_to 'chatを始める', chat_path(@user.id)%>
      <% end %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <%#= current_user.books.where('created_at > ?', Date.today).count %>
      <%#= current_user.books.where('created_at > ?', DateTime.yesterday).count %>
      <%= render 'count', today_book: @today_book, yesterday_book: @yesterday_book,this_week_book: @this_week_book,last_week_book: @last_week_book %>
      <%= render 'users/chart', books: @books %>
      <%= form_with url: user_search_path(@user), method: :get do |f| %>
        <%= f.date_field :created_at %>
        <%= f.submit '検索', class: 'btn btn-primary'  %>
      <% end %>
        
      <div id="search_result">
        <% if @search_book.present? %>
          <%= render 'user/search', search_book: @search_book %>
        <% end %>
      </div>
    </div>
  </div>
</div>
